<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Places You have Been!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
  </head>
  <body>
    @using PlacesYouHaveBeen.Models;

    <h1>Places you have been</h1>

    @if (Model.Count == 0)
    {
      <p>You haven't been anywhere.</p>
    }
    <ul>
      @foreach (Place place in Model)
      {
        <li><a href='/items/@place.Id'>@place.CityName</a></li>
      }
    </ul>
    
    <a href="/items/new">Add a new place.</a>

    <form action="/items/delete" method="post">
      <button type="submit" name="button">Clear All places listed</button>
    </form>
  </body>
</html>